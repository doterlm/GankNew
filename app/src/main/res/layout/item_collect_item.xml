<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gank_item_bg"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/collectitem_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_itemdata"/>

    <TextView
        android:id="@+id/collectitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/collectitem_img"/>

    <TextView
        android:id="@+id/collectitem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/collectitem_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/collectitem_title"/>

</RelativeLayout>